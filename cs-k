#!/bin/bash

s1="\033[32m"
s2="\033[34m"
e="\033[0m"

t1=$(cat << _EOF_
[${s1}ESC${e}][${s1} 1 ${e}][${s1} 2 ${e}][${s1} 3 ${e}][${s1} 4 ${e}][${s1} 5 ${e}][${s2} 6 ${e}][${s2} 7 ${e}][${s2} 8 ${e}][${s2} 9 ${e}][${s2} 0 ${e}][${s2} - ${e}][${s2} ^ ${e}][${s2} ] ${e}][${s2}  ZH   ${e}]\n
[${s1}  TAB  ${e}][${s1} q ${e}][${s1} w ${e}][${s1} e ${e}][${s1} r ${e}][${s1} t ${e}][${s2} y ${e}][${s2} u ${e}][${s2} i ${e}][${s2} o ${e}][${s2} p ${e}][${s2} @ ${e}][${s2} [${s2} ${e}][${s2}   BS   ${e}]\n
[${s1}   CTRL  ${e}][${s1} a ${e}][${s1} s ${e}][${s1} d ${e}][${s1} f ${e}][${s1} g ${e}][${s2} h ${e}][${s2} j ${e}][${s2} k ${e}][${s2} l ${e}][${s2} ; ${e}][${s2} : ${e}][${s2}   ENTER   ${e}]\n
[${s1}   SHIFT   ${e}][${s1} z ${e}][${s1} x ${e}][${s1} c ${e}][${s1} v ${e}][${s1} b ${e}][${s2} n ${e}][${s2} m ${e}][${s2} , ${e}][${s2} . ${e}][${s2} / ${e}][${s2}SHIFT${e}][${s2}Fn${e}]\n
           [${s1} Fn ${e}][${s1} ALT ${e}][${s1}         SPACE         ${e}][${s2} ALT ${e}][${s2} WIN ${e}]
\n\n
_EOF_)


t2=$(cat << _EOF_
[${s1}ESC${e}][${s1} ! ${e}][${s1} \" ${e}][${s1} # ${e}][${s1} $ ${e}][${s1} % ${e}][${s2} & ${e}][${s2} \' ${e}][${s2} ( ${e}][${s2} ) ${e}][${s2}   ${e}][${s2} = ${e}][${s2} ~ ${e}][${s2} } ${e}][${s2}  ZH   ${e}]\n
[${s1}  TAB  ${e}][${s1} Q ${e}][${s1} W ${e}][${s1} E ${e}][${s1} R ${e}][${s1} T ${e}][${s2} Y ${e}][${s2} U ${e}][${s2} I ${e}][${s2} O ${e}][${s2} P ${e}][${s2} \` ${e}][${s2} {${s2} ${e}][${s2}   BS   ${e}]\n
[${s1}   CTRL  ${e}][${s1} A ${e}][${s1} S ${e}][${s1} D ${e}][${s1} F ${e}][${s1} G ${e}][${s2} H ${e}][${s2} J ${e}][${s2} K ${e}][${s2} I ${e}][${s2} + ${e}][${s2} \* ${e}][${s2}   ENTER   ${e}]\n
[${s1}   SHIFT   ${e}][${s1} Z ${e}][${s1} X ${e}][${s1} C ${e}][${s1} V ${e}][${s1} B ${e}][${s2} N ${e}][${s2} M ${e}][${s2} < ${e}][${s2} > ${e}][${s2} ? ${e}][${s2}SHIFT${e}][${s2}Fn${e}]\n
           [${s1} Fn ${e}][${s1} ALT ${e}][${s1}         SPACE         ${e}][${s2} ALT ${e}][${s2} WIN ${e}]
\n\n
_EOF_)


t3=$(cat << _EOF_
[${s1}   ${e}][${s1}   ${e}][${s1}   ${e}][${s1}   ${e}][${s1}   ${e}][${s1}   ${e}][${s2}   ${e}][${s2}   ${e}][${s2}   ${e}][${s2}   ${e}][${s2}   ${e}][${s2}   ${e}][${s2}   ${e}][${s2}   ${e}][${s2}       ${e}]\n
[${s1}  TAB  ${e}][${s1} q ${e}][${s1} w ${e}][${s1} e ${e}][${s1} r ${e}][${s1} t ${e}][${s2} y ${e}][${s2} u ${e}][${s2} i ${e}][${s2} o ${e}][${s2} p ${e}][${s2} @ ${e}][${s2} [${s2} ${e}][${s2}   BS   ${e}]\n
[${s1}   CTRL  ${e}][${s1} a ${e}][${s1} s ${e}][${s1} d ${e}][${s1} f ${e}][${s1} g ${e}][${s2} h ${e}][${s2} j ${e}][${s2} k ${e}][${s2} l ${e}][${s2} ; ${e}][${s2} : ${e}][${s2}   ENTER   ${e}]\n
[${s1}   SHIFT   ${e}][${s1} z ${e}][${s1} x ${e}][${s1} c ${e}][${s1} v ${e}][${s1} b ${e}][${s2} n ${e}][${s2} m ${e}][${s2} , ${e}][${s2} . ${e}][${s2} / ${e}][${s2}SHIFT${e}][${s2}Fn${e}]\n
           [${s1} Fn ${e}][${s1} ALT ${e}][${s1}         SPACE         ${e}][${s2} ALT ${e}][${s2} WIN ${e}]
\n\n
_EOF_)

echo -e $"${t1}${t2}${t3}" | less -R

