[http]
	postBuffer = 524288000
[core]
	autoCRLF = false
	filemode = false
	longpaths = true
	whitespace = trailing-space,space-before-tab
	editor = vim
	fscache = true 
	quotepath = false
	excludesfile = ~/.gitignore_global
[pull]
	rebase = true
[merge]
	ff = false
[include]
#	path = .gitconfig.os
#	path = .gitconfig.proxy
	path = .gitconfig.user
[alias]
	diff = diff --ignore-space-change

